{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "ignorePaths": [
    "**/test/resources/**"
  ],
  "constraints": { "pnpm": "10.28.2", "node": "24.13.0" },
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "description": "Group all non-major updates into a single PR",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "non-major",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group major updates separately",
      "matchUpdateTypes": ["major"],
      "groupName": "major updates",
      "groupSlug": "major"
    }
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)build\\.gradle\\.kts$",
      "(^|/)settings\\.gradle\\.kts$"
    ]
  }
}