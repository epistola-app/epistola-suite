  "templateModel": {
    "id": "offer-letter-v1",
    "name": "Job Offer Letter",
    "version": 1,
    "pageSettings": {
      "format": "A4",
      "orientation": "portrait",
      "margins": {
        "top": 40,
        "right": 40,
        "bottom": 40,
        "left": 40
      }
    },
    "documentStyles": {
      "fontFamily": "Helvetica",
      "fontSize": "10pt",
      "color": "#333333",
      "lineHeight": "1.5"
    },
    "blocks": [
      {
        "type": "container",
        "id": "letterhead",
        "styles": {
          "marginBottom": "30px",
          "paddingBottom": "15px",
          "borderBottom": "2px solid #1e40af"
        },
        "children": [
          {
            "type": "columns",
            "id": "letterhead-cols",
            "gap": 20,
            "columns": [
              {
                "id": "company-col",
                "size": 1,
                "children": [
                  {
                    "type": "text",
                    "id": "company-name",
                    "content": {
                      "type": "doc",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "expression",
                              "attrs": { "expression": "company.name", "isNew": false }
                            }
                          ]
                        }
                      ]
                    },
                    "styles": {
                      "fontSize": "16pt",
                      "fontWeight": "bold",
                      "color": "#1e40af",
                      "marginBottom": "4px"
                    }
                  },
                  {
                    "type": "text",
                    "id": "company-address",
                    "content": {
                      "type": "doc",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "expression",
                              "attrs": { "expression": "company.address", "isNew": false }
                            },
                            { "type": "text", "text": ", " },
                            {
                              "type": "expression",
                              "attrs": { "expression": "company.city", "isNew": false }
                            }
                          ]
                        }
                      ]
                    },
                    "styles": {
                      "fontSize": "9pt",
                      "color": "#666666"
                    }
                  }
                ]
              },
              {
                "id": "date-col",
                "size": 1,
                "children": [
                  {
                    "type": "text",
                    "id": "offer-date",
                    "content": {
                      "type": "doc",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "expression",
                              "attrs": { "expression": "offerDate", "isNew": false }
                            }
                          ]
                        }
                      ]
                    },
                    "styles": {
                      "fontSize": "10pt",
                      "textAlign": "right",
                      "color": "#666666"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "container",
        "id": "recipient",
        "styles": {
          "marginBottom": "25px"
        },
        "children": [
          {
            "type": "text",
            "id": "candidate-name",
            "content": {
              "type": "doc",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "expression",
                      "attrs": { "expression": "candidate.name", "isNew": false }
                    }
                  ]
                },
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "expression",
                      "attrs": { "expression": "candidate.address", "isNew": false }
                    }
                  ]
                },
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "expression",
                      "attrs": { "expression": "candidate.city", "isNew": false }
                    },
                    { "type": "text", "text": ", " },
                    {
                      "type": "expression",
                      "attrs": { "expression": "candidate.country", "isNew": false }
                    }
                  ]
                }
              ]
            },
            "styles": {
              "fontSize": "10pt",
              "lineHeight": "1.6"
            }
          }
        ]
      },
      {
        "type": "text",
        "id": "greeting",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Dear " },
                {
                  "type": "expression",
                  "attrs": { "expression": "candidate.name", "isNew": false }
                },
                { "type": "text", "text": "," }
              ]
            }
          ]
        },
        "styles": {
          "marginBottom": "15px"
        }
      },
      {
        "type": "text",
        "id": "intro-paragraph",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "We are pleased to extend you an offer of employment for the position of " },
                {
                  "type": "expression",
                  "attrs": { "expression": "position.title", "isNew": false }
                },
                { "type": "text", "text": " in the " },
                {
                  "type": "expression",
                  "attrs": { "expression": "position.department", "isNew": false }
                },
                { "type": "text", "text": " department at " },
                {
                  "type": "expression",
                  "attrs": { "expression": "company.name", "isNew": false }
                },
                { "type": "text", "text": ". After careful consideration, we believe your skills and experience are a strong match for this role." }
              ]
            }
          ]
        },
        "styles": {
          "marginBottom": "20px"
        }
      },
      {
        "type": "text",
        "id": "position-heading",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Position Details" }
              ]
            }
          ]
        },
        "styles": {
          "fontSize": "13pt",
          "fontWeight": "bold",
          "color": "#1e40af",
          "marginBottom": "10px"
        }
      },
      {
        "type": "table",
        "id": "position-table",
        "borderStyle": "horizontal",
        "columnWidths": [30, 70],
        "styles": {
          "marginBottom": "25px"
        },
        "rows": [
          {
            "id": "row-title",
            "cells": [
              {
                "id": "cell-title-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "title-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Title" }] }] }
                  }
                ]
              },
              {
                "id": "cell-title-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "title-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.title", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          },
          {
            "id": "row-dept",
            "cells": [
              {
                "id": "cell-dept-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "dept-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Department" }] }] }
                  }
                ]
              },
              {
                "id": "cell-dept-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "dept-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.department", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          },
          {
            "id": "row-location",
            "cells": [
              {
                "id": "cell-loc-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "loc-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Location" }] }] }
                  }
                ]
              },
              {
                "id": "cell-loc-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "loc-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.location", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          },
          {
            "id": "row-start",
            "cells": [
              {
                "id": "cell-start-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "start-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Start Date" }] }] }
                  }
                ]
              },
              {
                "id": "cell-start-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "start-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.startDate", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          },
          {
            "id": "row-manager",
            "cells": [
              {
                "id": "cell-mgr-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "mgr-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Reports To" }] }] }
                  }
                ]
              },
              {
                "id": "cell-mgr-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "mgr-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.manager", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          },
          {
            "id": "row-type",
            "cells": [
              {
                "id": "cell-type-label",
                "styles": { "padding": "6px 8px", "fontWeight": "bold", "color": "#555555" },
                "children": [
                  {
                    "type": "text",
                    "id": "type-label",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "text", "text": "Employment" }] }] }
                  }
                ]
              },
              {
                "id": "cell-type-val",
                "styles": { "padding": "6px 8px" },
                "children": [
                  {
                    "type": "text",
                    "id": "type-val",
                    "content": { "type": "doc", "content": [{ "type": "paragraph", "content": [{ "type": "expression", "attrs": { "expression": "position.type", "isNew": false } }] }] }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "text",
        "id": "comp-heading",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Compensation" }
              ]
            }
          ]
        },
        "styles": {
          "fontSize": "13pt",
          "fontWeight": "bold",
          "color": "#1e40af",
          "marginBottom": "10px"
        }
      },
      {
        "type": "text",
        "id": "salary-detail",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Your " },
                {
                  "type": "expression",
                  "attrs": { "expression": "compensation.frequency", "isNew": false }
                },
                { "type": "text", "text": " base salary will be " },
                {
                  "type": "expression",
                  "attrs": { "expression": "compensation.currency", "isNew": false }
                },
                { "type": "text", "text": " " },
                {
                  "type": "expression",
                  "attrs": { "expression": "compensation.baseSalary", "isNew": false }
                },
                { "type": "text", "text": ", subject to applicable tax withholdings and deductions." }
              ]
            }
          ]
        },
        "styles": {
          "marginBottom": "15px"
        }
      },
      {
        "type": "conditional",
        "id": "signing-bonus-section",
        "condition": {
          "language": "jsonata",
          "raw": "compensation.signingBonus > 0"
        },
        "children": [
          {
            "type": "text",
            "id": "signing-bonus-text",
            "content": {
              "type": "doc",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    { "type": "text", "text": "You will receive a one-time signing bonus of " },
                    {
                      "type": "expression",
                      "attrs": { "expression": "compensation.currency", "isNew": false }
                    },
                    { "type": "text", "text": " " },
                    {
                      "type": "expression",
                      "attrs": { "expression": "compensation.signingBonus", "isNew": false }
                    },
                    { "type": "text", "text": ", payable with your first month's salary." }
                  ]
                }
              ]
            },
            "styles": {
              "marginBottom": "10px"
            }
          }
        ]
      },
      {
        "type": "conditional",
        "id": "equity-section",
        "condition": {
          "language": "jsonata",
          "raw": "compensation.equityShares > 0"
        },
        "children": [
          {
            "type": "text",
            "id": "equity-text",
            "content": {
              "type": "doc",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    { "type": "text", "text": "You will be granted " },
                    {
                      "type": "expression",
                      "attrs": { "expression": "compensation.equityShares", "isNew": false }
                    },
                    { "type": "text", "text": " stock options, vesting over " },
                    {
                      "type": "expression",
                      "attrs": { "expression": "compensation.vestingPeriod", "isNew": false }
                    },
                    { "type": "text", "text": "." }
                  ]
                }
              ]
            },
            "styles": {
              "marginBottom": "10px"
            }
          }
        ]
      },
      {
        "type": "conditional",
        "id": "relocation-section",
        "condition": {
          "language": "jsonata",
          "raw": "relocation = true"
        },
        "children": [
          {
            "type": "container",
            "id": "relocation-box",
            "styles": {
              "padding": "12px",
              "backgroundColor": "#eff6ff",
              "borderRadius": "4px",
              "borderLeft": "3px solid #2563eb",
              "marginBottom": "15px"
            },
            "children": [
              {
                "type": "text",
                "id": "relocation-text",
                "content": {
                  "type": "doc",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "type": "text",
                          "marks": [{ "type": "bold" }],
                          "text": "Relocation Assistance: "
                        },
                        { "type": "text", "text": "We will provide a relocation package of up to " },
                        {
                          "type": "expression",
                          "attrs": { "expression": "compensation.currency", "isNew": false }
                        },
                        { "type": "text", "text": " " },
                        {
                          "type": "expression",
                          "attrs": { "expression": "relocationBudget", "isNew": false }
                        },
                        { "type": "text", "text": " to support your move. This covers moving expenses, temporary housing, and travel costs." }
                      ]
                    }
                  ]
                }
              }
            ]
          }
        ]
      },
      {
        "type": "text",
        "id": "benefits-heading",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Benefits" }
              ]
            }
          ]
        },
        "styles": {
          "fontSize": "13pt",
          "fontWeight": "bold",
          "color": "#1e40af",
          "marginBottom": "10px",
          "marginTop": "10px"
        }
      },
      {
        "type": "text",
