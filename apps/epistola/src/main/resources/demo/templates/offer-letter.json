{
  "slug": "demo-offer-letter",
  "name": "Job Offer Letter",
  "dataModel": {
    "type": "object",
    "properties": {
      "company": {
        "type": "object",
        "description": "Hiring company details",
        "properties": {
          "name": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" },
          "hrContact": { "type": "string" },
          "hrEmail": { "type": "string", "format": "email" }
        },
        "required": ["name", "address", "hrContact", "hrEmail"]
      },
      "candidate": {
        "type": "object",
        "description": "Candidate receiving the offer",
        "properties": {
          "name": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" }
        },
        "required": ["name"]
      },
      "position": {
        "type": "object",
        "description": "Job position details",
        "properties": {
          "title": { "type": "string" },
          "department": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "manager": { "type": "string" },
          "location": { "type": "string" },
          "type": { "type": "string", "description": "Full-time, Part-time, Contract" }
        },
        "required": ["title", "department", "startDate"]
      },
      "compensation": {
        "type": "object",
        "description": "Salary and compensation details",
        "properties": {
          "baseSalary": { "type": "number" },
          "currency": { "type": "string" },
          "frequency": { "type": "string", "description": "Annual, Monthly" },
          "signingBonus": { "type": "number", "minimum": 0 },
          "equityShares": { "type": "number", "minimum": 0 },
          "vestingPeriod": { "type": "string" }
        },
        "required": ["baseSalary", "currency", "frequency"]
      },
      "benefits": {
        "type": "array",
        "description": "List of benefits included in the offer",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" }
          },
          "required": ["name", "description"]
        }
      },
      "offerDate": { "type": "string", "format": "date" },
      "expiryDate": { "type": "string", "format": "date" },
      "relocation": {
        "type": "boolean",
        "description": "Whether relocation assistance is offered"
      },
      "relocationBudget": {
        "type": "number",
        "description": "Relocation budget amount"
      }
    },
    "required": ["company", "candidate", "position", "compensation", "benefits", "offerDate", "expiryDate"]
  },
