{
  "name": "@epistola/editor-poc",
  "version": "0.0.1",
  "type": "module",
  "description": "Headless template editor proof of concept",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --format=esm --outfile=dist/editor.bundle.js",
    "dev": "tsc --watch",
    "example": "npx serve ."
  },
  "dependencies": {
    "nanostores": "^1.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
